{% extends 'base.html.twig' %}

{% block title %}Licenciés de la Catégorie{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Licenciés de la Catégorie: {{ categorie.getNomCategorie }}</h1>

    {% if licencies is empty %}
        <div class="alert alert-info">Aucun licencié trouvé pour cette catégorie.</div>
    {% else %}
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Numéro de Licence</th>
                </tr>
            </thead>
            <tbody>
                {% for licencie in licencies %}
                    <tr>
                        <td>{{ licencie.getNomLicencie }}</td>
                        <td>{{ licencie.getPrenomLicencie }}</td>
                        <td>{{ licencie.getNumLicence }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}

    <a href="{{ path('categorie_index') }}" class="btn btn-secondary mt-3">Retour aux catégories</a>
</div>
{% endblock %}
