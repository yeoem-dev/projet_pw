{% extends 'base.html.twig' %}

{% block title %}Mails envoyés aux contacts{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Mails envoyés aux contacts</h1>
    <a href="{{ path('app_send_mail_contact') }}" class="btn btn-primary mb-3">Nouveau mail</a>

    <div class="table-responsive">
        <table class="table table-hover mt-3">
            <thead class="table-light">
                <tr>
                    <th>Date</th>
                    <th>Destinataires</th>
                    <th>Objet</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% if mails|length > 0 %}
                    {% for mail in mails %}
                    <tr>
                        <td>{{ mail.dateEnvoi|date('d/m/Y') }}</td>
                        <td>
                            {% for desti in mail.contacts %}
                                {{ desti.emailContact }}{% if not loop.last %}, {% endif %}
                            {% endfor %}
                        </td>
                        <td>{{ mail.objet }}</td>
                        <td>
                            <a href="{{ path('app_mail_contact_delete', {'id': mail.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this email?');">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">Aucun mail trouvé.</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
